<h1>List of users</h1>

<form action="/users/add" method="post">
  <div>
    <label for="username">
      Username:
    </div>
    <input type="text" id="username" name="username" placeholder="Enter a new user">
    <div>
      <button>
        Add user
      </button>
    </div>
  </form>

  <hr>

  <table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th>
    </th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>

    <td>
      <%= user.username %>
    </td>

    <td>
      <a href="/users/<%= user.username %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
