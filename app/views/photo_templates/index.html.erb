<h1> List of photos</h1>

<form action="/photos/add" method="post">
  <label for="image_url">Image</label>
  <input type="text" id="image_url" name="image_url" placeholder="Link to image">

  <label for="caption">Caption</label>
  <textarea id="caption" name="caption" rows="2" placeholder="Enter your caption here.."></textarea>
  <label for="owner_id">Owner ID</label>
  <input type="text" id="owner_id" name="owner_id" placeholder="Enter an Owner ID">
  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <tr>
    <% @photos.all.each do |photo| %>
      <td>
        <img src="<%= photo.image %>" height="300px">
      </td>
      <td>
        <%= photo.caption %>
      </td>
      <td>
        <%= photo.poster.username %>
      </td>
      <td>
        <%= photo.created_at %>
      </td>
      <td>
        <a href="/photos/<%= photo.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>

</table>
